<%- include('../partials/header') %>

<form action="/flights" method="POST">
    <label for="airline">Airline</label>
    <input type="text" id="airline" name="airline">
    <br>
    <label for="airport">Airport</label>
    <input type="text" id="airport" name="airport">
    <br>
    <label for="flightNo">Flight Number</label>
    <input type="number" id="flightNo" name="flightNo" min="10" max="9999">
    <br>
    <label for="departs">Departs</label>
    <input type="date" id="departs" name="departs" min="<%= nextYear %>" value="<%= nextYear %>" >
    <br>
    <button>Add Flight</button>
</form>
